include Makefile.cpu
ifeq ($(CPU),i8-gnu)
      FOPT    = -fdefault-integer-8 -ffree-line-length-none -O3 -fPIC
      FC   = gfortran
      LDR   = gfortran
      CC    = gcc
      COPT = -O3 -fPIC
      INTDEF = ""
endif
ifeq ($(CPU),i4-gnu)
      FOPT    = -ffree-line-length-none -O3
      FC   = gfortran
      LDR   = gfortran
      CC    = gcc
      COPT = -O3
      INTDEF = "// "
endif

ifeq ($(CPU),i8-intel)
      FOPT    = -i8  -O3 -fPIC
      FC   = ifort
      LDR   = ifort
      CC    = icc
      COPT = -O3 -fPIC
      INTDEF = ""
endif
ifeq ($(CPU),i4-intel)
      FOPT    = -O3
      FC   = ifort
      LDR   = ifort
      CC    = icc
      COPT = -O3
      INTDEF = "// "
endif

